@if (Chunks == null)
{
	<span>
		Loading documents...
	</span>
}
else if (Chunks.Any())
{
	<p>
		<em>Chunks: <b>@Chunks.Count</b></em>
	</p>
	<table class="table">
		<thead>
			<tr>
				<th scope="col">Id</th>
				<th scope="col">Embedded Text</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var chunk in Chunks)
			{
				<tr>
					<td class="align-middle">
						<a href="/chunks/@chunk.Id">@chunk.Id</a>
					</td>
					<td class="align-middle">
						@chunk.EmbeddedText
					</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<span>
		No documents
	</span>
}
