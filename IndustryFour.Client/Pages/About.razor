@page "/about"
@inject IHttpClientFactory ClientFactory
@inject IConfiguration Configuration

<PageTitle>Industry 4.0 - About</PageTitle>

<div class="container mt-4">
    <h1>About</h1>
    <p>This is a platform for exploring Industry 4.0 concepts.</p>

    <p>
        <em>"@Quote"</em>
    </p>
</div>

@code
{
    private string Quote { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var client = ClientFactory.CreateClient("BaseApiUrl");
        Quote = await client.GetStringAsync("quotes/random");
    }
}